
@model IEnumerable<uHealth.Models.News>


@{
    ViewData["Title"] = "NewsView";
    Layout = "_Layout";
}

<main role="main">

    <div class="album py-5 ">
        <div class="container">

            <div class="row" id="news">

                @if (Model != null)
                {

                    foreach (var obj in Model)
                    {

                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img id="hell_llo" class="card-img-top" src="@obj.Image" />
                                <div class="card-body">
                                    <h5>@obj.Author Date published: @obj.Published</h5>
                                    <h3>@obj.Title</h3>
                                   
                                    <p class="card-text">@obj.Content</p>
                                    <a href=@obj.Url>Read More</a>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">

                                            <form asp-action="FavouriteNews" method="post">
                                                <input type="hidden" id="author" name="author" value="@obj.Author" />
                                                <input type="hidden" id="published" name="published" value="@obj.Published" />
                                                <input type="hidden" id="title" name="title" value="@obj.Title" />
                                                <input type="hidden" id="url" name="url" value="@obj.Url" />
                                                <input type="hidden" id="image" name="image" value="@obj.Image" />
                                                <input type="hidden" id="content" name="content" value="@obj.Content" />
                                                <input type="hidden" id="source" name="source" value="@obj.Source" />

                                                <button type="submit" class="btn btn-sm btn-outline-secondary">Favourite</button>
                                            </form>

                                        </div>
                                        <small class="text-muted">Source: @obj.Source</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>

</main>

